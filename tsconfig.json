{
  "compilerOptions": { 
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES5", "ES6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src"],
  "exclude": ["node_modules"] 
}